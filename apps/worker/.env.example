# OpenAI API Key for the LLM Teacher Brain
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# ============================================================================
# OpenAI Speech-to-Text (STT) Configuration
# ============================================================================
# Optional: Override the default transcription model
# The default is gpt-4o-mini-transcribe which is optimized for accuracy and speed
# Get your API key from https://platform.openai.com/api-keys (same as OPENAI_API_KEY)
# OPENAI_STT_MODEL=gpt-4o-mini-transcribe

# ============================================================================
# Inworld TTS Configuration
# ============================================================================
# Get your API key from https://inworld.ai/dashboard
# TTS is optional - if not configured, the app works without audio
INWORLD_API_KEY=your_inworld_api_key_here

# Optional: Default voice ID/name for TTS
# Check Inworld dashboard for available voices
# INWORLD_TTS_VOICE=voice_name_here
